<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/TableLayout01" 
android:background="@drawable/whitebricks"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:shrinkColumns="*"
android:stretchColumns="*" >	

<TableRow android:paddingTop="10dip">	
						
	<TextView android:id="@+id/item_title"
			
			android:layout_height="wrap_content" 
			android:drawableRight="@drawable/arrow"
			android:text="item_title" 
			android:textStyle="bold"
            android:textSize="16dip"
            android:gravity="center"
            android:layout_span="2"
			android:textColor="#194719"></TextView>
	<!-- 		
			<ImageView	android:id="@+id/arrow"
					android:gravity="center"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:src="@drawable/arrow"
					></ImageView>
		-->	
						
</TableRow>			
				
<TableRow android:paddingTop="7dip"
android:paddingBottom="7dip">	
	<TextView android:layout_width="fill_parent"  
			android:layout_height="wrap_content"
			android:gravity="center"  
            android:layout_span="2" 
			android:id="@+id/item_snippet"
			android:text="item_snippet" 
			android:textStyle="bold"
			android:textColor="#FF3300"
			></TextView>	
</TableRow>	

<TableRow >	 
     
	<ImageView android:id="@+id/div"
 			android:src="@drawable/green_divider"
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"
			android:gravity="center"  
            android:layout_span="2" />
	
</TableRow>					

<TableRow android:paddingLeft="5dip">			
		<TextView android:id="@+id/phone" 
			android:drawablePadding="7dip"
			android:text="n/a"
			android:textColor="#303030"
			android:drawableLeft="@drawable/phone1"
   			android:layout_span="2" 
			android:layout_weight="0.08"></TextView>		
					
	 	
            	
</TableRow>		

	
	
<TableRow android:paddingTop="7dip"
		  android:paddingLeft="7dip"
		 >	
					
		<TextView android:id="@+id/email"
			android:text="n/a" 
			android:textColor="#303030"
			android:layout_span="2" 
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/gmail_logo"
			android:drawablePadding="7dip"
			android:layout_weight="0.08"></TextView>			
		
			
</TableRow>	
	
	
	
